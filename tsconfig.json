{
  "compilerOptions": {
    "removeComments": true,
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "newLine": "lf",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES5",
    "lib": ["ESNext", "DOM"],
    "allowJs": false,
    "checkJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "example"]
}
